# ============================================
# CONVERGENCE PROTOCOL RESERVE DASHBOARD
# Environment Configuration Template
# ============================================

# Copy this file to .env and update with your values

# ============================================
# NETWORK CONFIGURATION
# ============================================

# Ethereum Mainnet RPC Endpoint
# Get free tier from: https://alchemy.com, https://infura.io, https://quicknode.com
ETHEREUM_RPC=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Network ID (1 = Ethereum Mainnet)
NETWORK_ID=1

# ============================================
# SMART CONTRACT ADDRESSES
# ============================================

# ReserveDashboard contract on Ethereum mainnet
RESERVE_DASHBOARD_ADDRESS=0x...

# TallyExchange contract on Ethereum mainnet
TALLY_EXCHANGE_ADDRESS=0x...

# TALLY token address
TALLY_TOKEN_ADDRESS=0x...

# ============================================
# STABLECOIN ADDRESSES
# ============================================

# USDC (Circle)
USDC_ADDRESS=0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48

# USDT (Tether)
USDT_ADDRESS=0xdAC17F958D2ee523a2206206994597C13D831ec7

# BUSD (Binance)
BUSD_ADDRESS=0x4Fabb145d64652a948d72533023f6E7A623C7C53

# ============================================
# SERVER CONFIGURATION
# ============================================

# Port to run monitoring service on
PORT=8080

# Update interval in milliseconds (30000 = 30 seconds)
UPDATE_INTERVAL=30000

# Node environment
NODE_ENV=production

# ============================================
# WEBSOCKET CONFIGURATION
# ============================================

# WebSocket URL for frontend (auto-determined if not set)
# Used in browser for real-time updates
REACT_APP_WEBSOCKET_URL=ws://localhost:8080

# Contract addresses for frontend
REACT_APP_RESERVE_DASHBOARD_ADDRESS=0x...
REACT_APP_TALLY_EXCHANGE_ADDRESS=0x...

# Stablecoin addresses for frontend
REACT_APP_USDC_ADDRESS=0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48
REACT_APP_USDT_ADDRESS=0xdAC17F958D2ee523a2206206994597C13D831ec7
REACT_APP_BUSD_ADDRESS=0x4Fabb145d64652a948d72533023f6E7A623C7C53

# ============================================
# MONITORING CONFIGURATION
# ============================================

# Slippage threshold percentage (alert if exceeded)
SLIPPAGE_THRESHOLD=1.0

# Maximum slippage allowed before auto-halt
MAX_SLIPPAGE=2.0

# Price update frequency (milliseconds)
PRICE_UPDATE_INTERVAL=60000

# Health check interval (milliseconds)
HEALTH_CHECK_INTERVAL=60000

# ============================================
# LOGGING CONFIGURATION
# ============================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# ============================================
# SECURITY CONFIGURATION
# ============================================

# CORS allowed origins
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Rate limiting (requests per minute)
RATE_LIMIT=1000

# Session timeout (milliseconds)
SESSION_TIMEOUT=3600000

# ============================================
# DONATION CONFIGURATION
# ============================================

# Bitcoin donation address (Segwit)
DONATION_ADDRESS_BITCOIN=bc1qg9gvc63lj7ssdenjnem6kycpxde5u7fheypgpm

# Ethereum donation address
DONATION_ADDRESS_ETHEREUM=0x...

# Tron donation address
DONATION_ADDRESS_TRON=TN3W4H6rK833nnLEmCqbYXC3PvLpLfEQGP

# Solana donation address
DONATION_ADDRESS_SOLANA=4zMMUHXUomBCFEuXUtzjAQXLCxZ6ohsKPmPPgFqF9Sj8

# Cosmos donation address
DONATION_ADDRESS_COSMOS=cosmos1x2vc3rwf0r4ww0rfnwu9lrcw39s6kr0k0h99z8

# Dogecoin donation address
DONATION_ADDRESS_DOGECOIN=DTqKbfBz7YZ8wvB9XnF3m6fJwYvJvFk7yZ

# ============================================
# EXTERNAL API KEYS
# ============================================

# CoinGecko API (for price data)
# Free tier: https://www.coingecko.com/en/api
COINGECKO_API_KEY=

# Etherscan API (for transaction verification)
# https://etherscan.io/apis
ETHERSCAN_API_KEY=

# ============================================
# DATABASE CONFIGURATION (Optional)
# ============================================

# MongoDB connection string (for historical data)
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/convergence

# Postgres connection string (alternative to MongoDB)
DATABASE_URL=postgresql://user:password@localhost:5432/convergence

# ============================================
# NOTIFICATIONS (Optional)
# ============================================

# Email for alerts
ALERT_EMAIL=alerts@convergence.protocol

# Discord webhook for alerts
DISCORD_WEBHOOK=https://discordapp.com/api/webhooks/...

# Telegram bot token for alerts
TELEGRAM_BOT_TOKEN=

# Telegram chat ID for alerts
TELEGRAM_CHAT_ID=

# ============================================
# DEPLOYMENT CONFIGURATION
# ============================================

# Domain name for production
DOMAIN=reserves.convergence.protocol

# SSL certificate path
SSL_CERT_PATH=/etc/ssl/certs/convergence.crt
SSL_KEY_PATH=/etc/ssl/private/convergence.key

# Debug mode
DEBUG=false
